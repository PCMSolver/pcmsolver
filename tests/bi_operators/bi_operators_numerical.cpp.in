        {
            double eps = 80.0;
            double kappa = 1.5;
            std::rename("PEDRA.OUT", "PEDRA.OUT.ionic");
            IonicLiquid<AD_directional, NumericalIntegrator> gf(eps, kappa);
            THEN("the matrix elements of S are")
